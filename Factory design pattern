interface Pizza {
    void prepare();
}

class cheesePizza implements Pizza {
    @Override
    public void prepare() {
        System.out.println("Cheese pizza is prepared");
    }
}
class peperoniPizza implements Pizza {
    @Override
    public void prepare() {
        System.out.println("peperoni pizza is prepared");
    }
}
class veggiePizza implements Pizza {
    @Override
    public void prepare() {
        System.out.println("veggie pizza is prepared");
    }
}



class SimplePizzaFactory {
    public Pizza createPizza(String type){
        Pizza pizza = null;
        switch (type) {
            case "cheese":
                pizza = new cheesePizza();
                break;
            case "peperoni":
                pizza = new peperoniPizza();
                break;
            case "veggie":
                pizza = new veggiePizza();
                break;
            default:
                break;
        }
        return pizza;
    }
}

class FactoryPatternDesign {
    public static void main(String[] args) {
        SimplePizzaFactory simplePizzaFactory = new SimplePizzaFactory();
        Pizza pizza = simplePizzaFactory.createPizza("cheese");
        pizza.prepare();
        simplePizzaFactory.createPizza("peperoni").prepare();
    }
}
